{% extends 'base.html.twig' %}
{% block title %}FealJob - Créer un CV{% endblock %}
{% block body %}
    <div style="margin-top: 20px;" class="ui text justified container">
        <h2 class="ui center aligned icon header">
            <i class="address card outline icon"></i>
            Créer son CV
        </h2>
        <form class="ui form segment" method="post">
            <div class="inline field">
                <label>Nom du CV :</label>
                <div class="ui input">
                    <input type="text" name="nomCV" value="CV #1">
                </div>
            </div>
            <div class="inline field">
                <label>Types de contrat :</label>
                <div class="ui toggle checkbox">
                    <label>CDD</label>
                    <input type="checkbox" name="transport" class="hidden">
                </div>
                <div class="ui toggle checkbox">
                    <label>CDI</label>
                    <input type="checkbox" name="transport" class="hidden">
                </div>
                <div class="ui toggle checkbox">
                    <label>Intérim</label>
                    <input type="checkbox" name="transport" class="hidden">
                </div>
                <div class="ui toggle checkbox">
                    <label>Saisonnier</label>
                    <input type="checkbox" name="transport" class="hidden">
                </div>
            </div>
            <!-- Identité -->
            <h4 class="ui dividing header">Identité</h4>
            <div class="ui two column grid">
                <div class="ui four wide column">
                    <div class="blurring dimmable image">
                        <div class="ui dimmer">
                            <div class="content">
                                <div class="center">
                                    <i class="pencil icon"></i>
                                </div>
                            </div>
                        </div>
                        <img src="{{ asset('img/placeholders/elyse.png') }}" alt="photo de profil"
                             class="ui small circular dimmable image">
                    </div>
                </div>
                <div class="ui twelve wide column">
                    <div class="two fields">
                        <div class="field">
                            <label>Prénom</label>
                            <input type="text" name="prenom" value="Jean">
                        </div>
                        <div class="field">
                            <label>Nom</label>
                            <input type="text" name="nom" value="Valjean">
                        </div>
                    </div>
                    <div class="two fields">
                        <div class="field">
                            <label>Né le</label>
                            <input type="text" name="dateNaissance" placeholder="18/09/1989">
                        </div>
                        <div class="field">
                            <label>Métier</label>
                            <input type="text" name="metier" placeholder="Développeur Web">
                        </div>
                    </div>
                    <div class="two fields">
                        <div class="eight wide field">
                            <label>Sexe</label>
                            <select class="ui dropdown" name="sexe">
                                <option value="N">Non précisé</option>
                                <option value="H">Homme</option>
                                <option value="F">Femme</option>
                            </select>
                        </div>
                        <div class="float right eight wide field">
                            <label>Photo de profil</label>
                            <div class="ui small basic icon buttons">
                                <label style="width: 150px;" class="ui button" for="photo-profil">
                                    <i class="paperclip icon"></i>
                                    Sélectionner
                                    <input type="file" style="display: none;" id="photo-profil"
                                           name="photoProfil">
                                </label>
                                <button class="ui button"><i class="times icon"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <div class="two fields">
                    <div class="field">
                        <label>E-mail</label>
                        <div class="ui left icon input">
                            <i class="icon envelope"></i>
                            <input type="text" name="mail" placeholder="jeanvaljean@gmail.com"
                                   value="jeanvaljean@gmail.com">
                        </div>
                    </div>
                    <div class="field">
                        <label>Téléphone</label>
                        <div class="ui left icon input">
                            <i class="icon phone"></i>
                            <input type="text" name="telephone" placeholder="Téléphone" value="06 96 47 32 42">
                        </div>
                    </div>
                </div>
                <div class="two fields">
                    <div class="field">
                        <label>Adresse</label>
                        <div class="ui left icon input">
                            <i class="icon home"></i>
                            <input type="text" name="adresse" placeholder="16 rue des Coquillages">
                        </div>
                    </div>
                    <div class="field">
                        <label>Situation familiale</label>
                        <select class="ui dropdown" name="situationF">
                            <option value="N">Non précisée</option>
                            <option value="CELIB">Célibataire</option>
                            <option value="MARIE">Marié.e</option>
                            <option value="PAX">Paxé.e</option>
                            <option value="VEUF">Veuf.ve</option>
                        </select>
                    </div>
                </div>
            </div>
            <!-- Formation -->
            <h4 class="ui dividing header">Formation</h4>
            <div class="two fields">
                <div class="field">
                    <label>Nom de l'établissement</label>
                    <input type="text" name="nomEtablissement" placeholder="Nom de l'établissement">
                </div>
                <div class="field">
                    <label>Intitulé du diplôme</label>
                    <input type="text" name="intituleDiplome" placeholder="Intitulé du diplôme">
                </div>
            </div>
            <div class="field">
                <label>Date d'obtention</label>
                <input type="text" name="dateObtention" placeholder="26/04/2013">
            </div>
            <!-- Expérience -->
            <h4 class="ui dividing header">Expérience professionnelle</h4>
            <div class="two fields">
                <div class="field">
                    <label>Intitulé du poste</label>
                    <div class="field">
                        <input type="text" name="intitulePoste" placeholder="Intitulé du poste">
                    </div>
                </div>
                <div class="field">
                    <label>Nom de l'entreprise</label>
                    <div class="field">
                        <input type="text" name="nomEntreprise" placeholder="Nom de l'entreprise">
                    </div>
                </div>
            </div>
            <div class="field">
                <label>Location</label>
                <div class="field">
                    <input type="text" name="location" placeholder="Location">
                </div>
            </div>
            <div class="field">
                <label>Date de fréquentation</label>
                <div class="fields">
                    <div class="five wide field">
                        Du
                        <input type="text" name="date-debut" placeholder="Date début">
                    </div>
                    <div class="five wide field">
                        Au
                        <input type="text" name="date-fin" placeholder="Date fin">
                    </div>
                </div>
            </div>
            <!-- Autres -->
            <h4 class="ui dividing header">Autres informations</h4>
            <div class="ui segment">
                <div class="field">
                    <div class="ui toggle checkbox">
                        <input type="checkbox" name="permisB" class="hidden">
                        <label>Je dispose du permis B</label>
                    </div>
                </div>
                <div class="field">
                    <div class="ui toggle checkbox">
                        <input type="checkbox" name="transport" class="hidden">
                        <label>J'ai un moyen de transport</label>
                    </div>
                </div>
            </div>
            <button type="submit" class="ui fluid large green submit button">Enregistrer</button>
            <div class="messages">
                <div class="ui negative message">
                    <div class="header">
                        Certains champs sont incorrects
                    </div>
                    <p>Veuillez remplir les champs mis en rouge</p>
                </div>
                <div class="ui icon message">
                    <i class="notched circle loading icon"></i>
                    <div class="content">
                        <div class="header">
                            Une petite seconde
                        </div>
                        <p>Nous sommes en cours d'enregistrement</p>
                    </div>
                </div>
                <!-- Remplacer positive par success et negative par error -->
                <div class="ui positive message">
                    <div class="header">
                        Votre CV a bien été enregistré
                    </div>
                    <p>Vous pouvez retourner à vos précentes occupations</p>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
