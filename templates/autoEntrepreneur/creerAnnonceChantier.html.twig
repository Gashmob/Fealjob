            </svg>
        </div>
    </div>
    <div class="ui text justified container">
        <h3 class="ui center aligned icon header">
            <i class="icon bullhorn"></i>
            Nouvelle annonce
        </h3>
        <form class="ui form segment" method="post">
            <div class="required field">
                <label>Intitulé de l'annonce</label>
                <input required type="text" name="nom" placeholder="Intitulé de l'annonce">
            </div>
            <div class="required field">
                <label>Localisation</label>
                <input required type="text" name="lieu" placeholder="Localisation">
            </div>
            <div class="field required">
                <label>Date début</label>
                <input required name="date" placeholder="jj/mm/aaaa" type="date">
            </div>
            <div class="field">
                <label>Description</label>
                <textarea name="description" cols="30" rows="4"></textarea>
            </div>
            <div class="ui divider"></div>
            <div class="field">
                <div class="ui toggle checkbox">
                    <input type="checkbox" name="loge" class="hidden">
                    <label>Emploi logé</label>
                </div>
            </div>
            <button class="ui fluid large green submit button" type="submit">Créer</button>
        </form>
    </div>
{% endblock %}