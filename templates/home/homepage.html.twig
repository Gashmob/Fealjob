{% block javascripts %}
    <script>
        $('.visiteurNav').addClass('hidden');
        $('.primaryNav').addClass('fixed');
        // fix menu when passed
        $('.masthead')
            .visibility({
                once: false,
                onBottomPassed: function () {
                    $('.visiteurNav').transition('fade in');
                },
                onBottomPassedReverse: function () {
                    $('.visiteurNav').transition('fade out');
                }
            })
        ;

        //Articles fade-in
        $('.fadeupAnim').addClass('transition hidden');
        window.addEventListener('scroll', function () {
            let articles = document.querySelectorAll('.fadeupAnim')
            for (let article of articles) {
                setTimeout(function () {
                    if (article.getBoundingClientRect().y < 600 && article.classList.contains('hidden')) {
                        $(article).transition('fade up')
                    }
                }, 500)
            }
        })

    </script>
